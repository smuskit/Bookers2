<div class="container">
  <div class="row">
    <div class="col-lg-9">
      <h2 class="form-header-title"> User info</h2>

        <% if @user.errors.any? %>
          <div id="error_explanation" class="alert-danger">
            <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_for(@user) do |f| %>
            <div class="form-group has-icon">
                <label class="control-label" for="inputEmail"> Name</label>
                 <%= f.text_field :name, autofocus: true, id:"inputEmail", class: "name" %>
            </div>
            <div class="form-group has-icon">
                <label class="control-label" for="inputEmail">Image</label>
                <p><%= f.attachment_field :profile_image, class: "user_image" %>
                </p>
            </div>
            <div class="form-group has-icon">
                <label class="control-label" for="inputEmail"> introduction</label>
                <%= f.text_area :introduction, autofocus: true, id:"inputEmail", class: "introduction" %>
            </div>
            <%= f.submit "Update User" %>
        <% end %>
    </div>
    <div class="col-lg-3">
    </div>
  </div>
</div>




