<h2> Users info</h2>

<%= attachment_image_tag @user, :profile_image, size: "100x100" , format: 'jpeg' %>
<table>
	<tr>
		<th> name</th>
		<td><%= @user.name %></td>
	</tr>
	<tr>
		<th> introduction</th>
		<td><%= @user.introduction %></td>
	</tr>
</table>
<% if @user.id == current_user.id %>
<%= link_to "edit", edit_user_path(@user) %>
<% end %>

<h2> New book</h2>

<%= form_for(@book) do |f| %>
  <h4> Title</h4>
  <%= f.text_field :title %>

  <h4> Opinion</h4>
  <%= f.text_area :opinion %>

  <p><%= f.submit 'Create Book' %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, size: "60x60" , format: 'jpeg' %></td>
        <td><%= book.title %></td>
        <td><%= book.opinion %></td>
      </tr>
    <% end %>
  </tbody>
</table>
