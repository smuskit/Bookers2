<div class="container">
  <div class="row">

      <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>

    <div class="col-xs-3">
      <%= render 'users/list', user: @user, book: @book %>
    </div>

    <div class="col-xs-9">
      <h2> Books</h2>
      <table class="table table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag book.user, :profile_image, size: "50x50" , format: 'jpeg', fallback: "no_image.jpg", class: "user_image" %></td>
              <td>
                <%= link_to book_path(book), class: "book_#{book.id}" do %>
                <%= book.title %>
                <% end %>
              </td>
              <td><%= book.opinion %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
