<div class="container">
  <div class="row">

    <div class="col-lg-3">
      <%= render 'users/list', user: current_user, book: @book %>
    </div>

    <div class="col-lg-9">
      <h2> Users</h2>
      <table class="table table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, size: "50x50" , format: 'jpeg', fallback: "no_image.jpg", class: "user_image" %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user), class: "user_#{user.id}" %></td>
            </tr>
      	<% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
