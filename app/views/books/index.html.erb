<h1> Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, size: "60x60" , format: 'jpeg' %></td>
        <td><%= book.title %></td>
        <td><%= book.opinion %></td>
      </tr>
    <% end %>
  </tbody>
</table>



