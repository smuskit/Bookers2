<div class="container">
  <div class="row">

      <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>

    <div class="col-xs-3">
      <%= render 'users/list', user: @book.user, book: @books %>
    </div>

    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id), class: "user_#{@book.user.id}" do %>
              <%= attachment_image_tag @book.user, :profile_image, size: "50x50" , format: 'jpeg', fallback: "no_image.jpg", class: "user_image" %>
              <p><%= @book.user.name %></p>
              <% end %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.opinion %></td>
            <% if @book.user.id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to "Destroy", book_path(@book), class: "btn btn-danger destroy_book_#{@book.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>
