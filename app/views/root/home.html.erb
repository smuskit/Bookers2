<div class="container">
  <div class="row">
      <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>

    <div class="col-md-offset-3 col-md-6">
		<div class="main">
			<div class="main-content">
				<h1>Welcome to <span class="glyphicon glyphicon-book"></span>Bookers !!</h1>

				<p class="main-text">In <span class="glyphicon glyphicon-book"></span><strong>Bookers</strong>,<br>you can share and exchange your opinions, inpression, and emotions<br>about various books!</p>
				<div class="main-button">
					<div class="row">
						<%= link_to "log In", new_user_session_path, class: "btn btn-info col-xs-10 col-xs-offset-1 sign_in" %>
					</div>
					<div class="row">
						<%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success col-xs-10 col-xs-offset-1 sign_up" %>
					</div>
				</div>
			</div>
		</div>
	</div>
  </div>
</div>