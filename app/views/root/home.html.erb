<div class="container">
  <div class="row">
      <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
    <div class="col-lg-3">
    </div>
    <div class="col-lg-6">
		<div class="main">
			<div class="main-content">
				<h1>Welcome to <i class="fas fa-book fa-1x"></i>Bookers !!</h1>

				<p class="main-text">In <i class="fas fa-book"></i><span style="font-weight:bold;">Bookers</span>,<br>you can share and exchange your opinions, inpression, and emotions<br>about various books!</p>
				<div class="main-button">
				  <%= link_to "log In", new_user_session_path, class: "btn btn-info col-lg-11 sign_in" %>
				  <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success col-lg-11 sign_up" %>
				</div>
			</div>
		</div>
	</div>
  </div>
</div>